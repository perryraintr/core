<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">
    
<sqlMap namespace="cash">
	<select id="by" parameterClass="Integer" resultClass="com.raintr.pinshe.bean.CashBean">
	<![CDATA[select id,store_id,member_id,order_id,amount,type,status,create_time,modify_time from pinshe.cash where create_time<=(select create_time from pinshe.cash order by create_time desc limit #id#,1) order by create_time desc limit 100]]>
	</select>
	<select id="byId" parameterClass="Integer" resultClass="com.raintr.pinshe.bean.CashBean">
	<![CDATA[select id,store_id,member_id,order_id,amount,type,status,create_time,modify_time from pinshe.cash where id=#id#]]>
	</select>
	<select id="byOrderId" parameterClass="Integer" resultClass="com.raintr.pinshe.bean.CashBean">
	<![CDATA[select id,store_id,member_id,order_id,amount,type,status,create_time,modify_time from pinshe.cash where order_id=#order_id#]]>
	</select>
	<select id="byStoreId" parameterClass="com.raintr.pinshe.bean.CashBean" resultClass="com.raintr.pinshe.bean.CashBean">
	<![CDATA[select id,store_id,member_id,order_id,amount,type,status,create_time,modify_time from pinshe.cash where store_id=#store_id# and create_time<=(select create_time from pinshe.cash where store_id=#store_id# order by create_time desc limit #id#,1) order by create_time desc limit 100]]>
	</select>
	<insert id="add" parameterClass="com.raintr.pinshe.bean.CashBean">
	<![CDATA[insert into pinshe.cash(store_id,member_id,order_id,amount,type,status,create_time,modify_time) values(#store_id#,#member_id#,#order_id#,#amount#,#type#,#status#,#create_time#,#modify_time#)]]>
	<selectKey resultClass="Integer" keyProperty="id" >select @@identity id</selectKey>
	</insert>
	<update id="modify" parameterClass="com.raintr.pinshe.bean.CashBean">
	<![CDATA[update pinshe.cash set store_id=#store_id#,member_id=#member_id#,order_id=#order_id#,amount=#amount#,type=#type#,status=#status#,modify_time=#modify_time# where id=#id#]]>
	</update>
	<delete id="remove" parameterClass="Integer">
	<![CDATA[delete from pinshe.cash where id=#id#]]>
	</delete>
</sqlMap>